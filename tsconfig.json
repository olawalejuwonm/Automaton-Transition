{
  "compilerOptions": {
    "target": "ES2019",                           // Set the JavaScript version for emitted code
    "module": "commonjs",                         // Use CommonJS module system for Node.js compatibility
    "outDir": "dist",                             // Redirect output structure to the "dist" directory
    "rootDir": "src",                             // Specify the root directory of input files
    "strict": true,                                 // Enable all strict type-checking options
    "esModuleInterop": true,                        // Enable default import interop between CommonJS and ES Modules
    "forceConsistentCasingInFileNames": true        // Disallow inconsistently-cased references to the same file
  },
  "include": ["src/**/*"]                         // Include all TypeScript files under "src"
}
